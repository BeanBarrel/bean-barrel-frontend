pipeline {
    agent any

    stages {
        stage('Stage 1: Start') {
            steps {
                echo 'Pipeline started 🚀'
            }
        }

        stage('Stage 2: Hello') {
            steps {
                echo 'Hello 👋'
            }
        }

        stage('Stage 3: World') {
            steps {
                echo 'World 🌍'
            }
        }

        stage('Stage 4: Done') {
            steps {
                echo 'Pipeline finished ✅'
            }
        }
    }
}
